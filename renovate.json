{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": ["asdf", "gradle-wrapper", "pyenv", "pub", "ruby-version"],
  "extends": ["config:recommended", ":pinDevDependencies"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchManagers": ["asdf"],
      "addLabels": ["flutter"]
    },
    {
      "matchManagers": ["gradle-wrapper"],
      "addLabels": ["gradle"],
      "automerge": true
    },
    {
      "matchManagers": ["pyenv"],
      "addLabels": ["python"],
      "automerge": true
    },
    {
      "matchManagers": ["pub"],
      "addLabels": ["dart"],
      "automerge": true
    },
    {
      "matchManagers": ["ruby-version"],
      "addLabels": ["ruby"],
      "automerge": true,
      "semanticCommitType": "dev"
    }
  ],
  "prConcurrentLimit": 1
}
